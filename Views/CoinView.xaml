<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.CoinView"
             Title="CoinView">
    <!-- CRTL + K,D: IDENTA O CÃ“DIGO-->
    <ScrollView>
        <VerticalStackLayout
            
            Padding="30"
            Spacing="25">
            
            <Image x:Name="CoinImage"
                   WidthRequest="100"
                Source="logojogo.png" />

            <Picker Title="-- Selecione Cara ou Coroa -- " 
                    SelectedItem="{Binding LadoEscolhido}" >
                <Picker.Items>
                <x:String>Cara</x:String>
                <x:String>Coroa</x:String>
                </Picker.Items>
            </Picker>

            <Button x:Name="CoinFlipButton"
                    Command="{Binding FlipCommand}"
                    Text="Girar a moeda" />

            <Label x:Name="ResultaLabel"
                   Text="{Binding Resultado}" />

            <Image x:Name="CoinResult"
                   WidthRequest="100"
                   Source="{Binding Imagem}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>