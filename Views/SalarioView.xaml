<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Views.SalarioView"
             Title="Calculadora de Salário">

	<ContentPage.BindingContext>
		<vm:SalarioViewModel />
	</ContentPage.BindingContext>

	<ScrollView>
		<StackLayout Margin="20">
			<Label Text="Calculadora de Salário" FontSize="Large" FontAttributes="Bold" Margin="0,0,0,10"/>

			<HorizontalStackLayout Spacing="10" Margin="0,0,0,10">
				<Label Text="Horas Semanais:" VerticalOptions="Center" WidthRequest="130"/>
				<Entry Placeholder="Ex: 40"
                       Keyboard="Numeric"
                       WidthRequest="140"
                       Text="{Binding HorasSemanaString, Mode=TwoWay}" />
			</HorizontalStackLayout>

			<HorizontalStackLayout Spacing="10" Margin="0,0,0,10">
				<Label Text="Valor Hora:" VerticalOptions="Center" WidthRequest="130"/>
				<Entry Placeholder="Ex: 15.50"
                       Keyboard="Numeric"
                       WidthRequest="140"
                       Text="{Binding ValorHoraString, Mode=TwoWay}" />
			</HorizontalStackLayout>

			<Button Text="Calcular" HorizontalOptions="Start"
                    Command="{Binding CalcularSalarioCommand}"
                    WidthRequest="150" Margin="0,10,0,10"/>

			<Label Text="{Binding SalarioBruto, StringFormat='Salário Bruto: {0:C}'}"
                   FontAttributes="Bold" FontSize="Medium" />

			<Label Text="{Binding DescontoINSS, StringFormat='Desconto INSS: {0:C}'}"
                   FontAttributes="Bold" FontSize="Medium" />

			<Label Text="{Binding DescontoIR, StringFormat='Desconto IR: {0:C}'}"
                   FontAttributes="Bold" FontSize="Medium" />

			<Label Text="{Binding SalarioLiquido, StringFormat='Salário Líquido: {0:C}'}"
                   FontAttributes="Bold" FontSize="Medium" Margin="0,10,0,0" />
		</StackLayout>
	</ScrollView>
</ContentPage>
